class Solution {
    public String restoreString(String s, int[] indices) {
        StringBuilder sb = new StringBuilder();
        HashMap<Integer,Character> map = new HashMap<>();
        for (int i = 0; i < indices.length; ++i) {
            char c = s.charAt(i);
            map.put(indices[i], c);
        }
        for (int i = 0; i < indices.length; ++i) {
            sb.append(map.get(i));
        }
        return sb.toString();
    }

}
